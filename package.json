{
  "name": "@master-chief/pretty-table",
  "version": "1.0.0",
  "description": "format data to a console-friendly table",
  "main": "index.js",
  "author": "117",
  "license": "ISC",
  "types": "@types",
  "scripts": {
    "build": "rimraf dist @types && npm i && tsc",
    "test": "npm run test:default",
    "test:default": "jest --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watchAll"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
